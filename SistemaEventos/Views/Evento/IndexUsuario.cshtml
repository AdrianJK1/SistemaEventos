@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<SistemaEventos.Models.Evento>

@{
    ViewData["Title"] = "Inscripcion de eventos";
}

<h1>Inscripcion de eventos</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div id="success-message" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var message = document.getElementById('success-message');
            if (message) {
                setTimeout(function () {
                    message.style.opacity = 0;
                    setTimeout(function () {
                        message.style.display = 'none';
                    }, 600); 
                }, 5000); 
            }
        });
    </script>
}


<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model[0].NombreEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DescripcionDelEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Ubicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.NombreEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDelEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                    @Html.ActionLink("Inscribirse", "Create", "Participante", null, new { @class = "btn btn-info" })

                    
            </td>
        </tr>
}
    </tbody>
</table>
<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
{
    LiElementClasses = new String[] { "page-item" },
    PageClasses = new String[] { "page-link" }
})
</div>

