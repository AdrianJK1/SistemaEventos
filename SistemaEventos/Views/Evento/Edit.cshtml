            </div>
            <div class="form-group">
                <label asp-for="DescripcionDelEvento" class="control-label"></label>
                <input asp-for="DescripcionDelEvento" class="form-control" />
                <span asp-validation-for="DescripcionDelEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicacion" class="control-label"></label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDelEvento" class="control-label"></label>
                <input asp-for="FechaDelEvento" type="date" class="form-control" />
                <span asp-validation-for="FechaDelEvento" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

