@model SistemaEventos.Models.Usuario


@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Registro</h1>
                <hr />
                <form asp-controller="Usuario" asp-action="Register" method="post">
                    <div class="form-group m-2">
                        <label class="control-label">Correo</label>
                        <input type="email" placeholder="Email" asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group m-2">
                        <label class="control-label">Contraseña</label>
                        <input type="password" placeholder="Contraseña" asp-for="Password" class="form-control" />
                    </div>
                    <div class="form-group m-2">
                        <label class="control-label">Rol</label>
                        <select asp-for="Role" class="form-control">
                            <option value="Usuario">Usuario</option>
                            <option value="Organizador">Organizador</option>
                        </select>
                    </div>
                    <div class="form-group m-2">
                        <button type="submit" class="btn btn-primary">Registrar</button>
                    </div>
                    @if (ViewData["ValidateMessage"] != null)
                    {
                        <br />
                        <br />
                        <label class="control-label text-danger">@ViewData["ValidateMessage"]</label>
                    }
                </form>
            </div>
        </div>
    </div>
</body>
</html>
