@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<SistemaEventos.Models.RegistroEvento>

@{
    ViewData["Title"] = "Registros de Eventos";
}

<h1>Registros de Eventos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Evento.NombreEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Participante.Nombre)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evento.NombreEvento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Participante.Nombre)
                </td>
                
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
{
    LiElementClasses = new String[] { "page-item" },
    PageClasses = new String[] { "page-link" }
})
</div>
